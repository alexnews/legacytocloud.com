# ===========================================
# LegacyToCloud Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ===========================================

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/legacytocloud
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=legacytocloud
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Backend
SECRET_KEY=change-me-in-production-use-long-random-string
API_PORT=8003
ENVIRONMENT=development

# Frontend (used during build)
NEXT_PUBLIC_API_URL=http://localhost:8003/api

# Email (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# S3 Storage (for future use)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
